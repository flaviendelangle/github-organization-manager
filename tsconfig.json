{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist/typings",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
